<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Create_Survey.radio_list_frag"
    android:orientation="vertical"
    android:background="@color/grey_300"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearcontainerradio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/question_back"
            android:id="@+id/radio_edittext"
            android:padding="5dp"
            android:hint="Enter Question Here" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Choices"
            android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_gravity="end">

         <Button
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:id="@+id/radio_create"
             android:layout_marginRight="10dp"
             android:background="@drawable/ic_add_circle_outline_black_24dp"/>

         <Button
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginRight="10dp"
             android:id="@+id/radio_remove"
             android:background="@drawable/remove"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="submit"
        android:background="@drawable/button_backgraound"
        android:id="@+id/radio_submit"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_gravity="center|bottom">

    </Button>
</LinearLayout>