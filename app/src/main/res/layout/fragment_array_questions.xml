<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/linearcontainerradio"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/question_back"
        android:id="@+id/mainQuestion"
        android:padding="5dp"
        android:hint="Enter Main Question Here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Add Sub questions"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center"
            android:layout_gravity="end">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sub_create"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:id="@+id/sub_remove"
                android:background="@drawable/remove"/>
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Add Options"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center"
            android:layout_gravity="end">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/op_create"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_add_circle_outline_black_24dp"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:id="@+id/op_remove"
                android:background="@drawable/remove"/>
        </LinearLayout>



    </LinearLayout>




    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="submit"
        android:background="@drawable/button_backgraound"
        android:id="@+id/radio_submit"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_gravity="center|bottom">

    </Button>
</LinearLayout>