<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".testq"
    android:id="@+id/linearcontainer"
    android:padding="16dp"
    android:background="@color/grey_300">



    <LinearLayout
        android:id="@+id/linearLayoutf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Question"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/question_backgraound"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/fquestion_id"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Question text here"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/cancelf_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_backgraound"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savef_id"
            android:text="Save"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_backgraound"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>