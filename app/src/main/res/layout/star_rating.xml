<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/linearcontainerradio"
    android:background="@color/grey_300"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/question_back"
        android:id="@+id/radio_edittext"
        android:padding="5dp"
        android:hint="Enter Question Here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select Stars"
        android:layout_marginTop="10dp"
        />

    <RatingBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:defaultFocusHighlightEnabled="false"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:isIndicator="false"
        android:stepSize="0.5"
        android:rating="2.5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_backgraound"
        android:text="submit"
        android:id="@+id/array_submit"
        />


</LinearLayout>